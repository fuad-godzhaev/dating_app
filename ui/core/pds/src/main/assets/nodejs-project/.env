#PDS_CRAWLERS=https://bsky.network

# Use did:web for local development (no PLC directory needed)
# This allows HTTP endpoints for local testing
PDS_SERVICE_DID=did:web:localhost:3002

# Logging
LOG_ENABLED=true

# Email (optional for local testing)
#PDS_EMAIL_SMTP_URL=
