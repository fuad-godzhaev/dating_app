{
  "lexicon": 1,
  "id": "com.fypapp.getProfile",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get a user's dating profile",
      "parameters": {
        "type": "params",
        "properties": {
          "actor": {
            "type": "string",
            "format": "at-identifier",
            "description": "The DID or handle of the user whose profile to retrieve"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["profile"],
          "properties": {
            "profile": {
              "type": "ref",
              "ref": "com.fypapp.profile"
            },
            "uri": {
              "type": "string",
              "format": "at-uri"
            },
            "cid": {
              "type": "string",
              "format": "cid"
            },
            "matchScore": {
              "type": "integer",
              "description": "Compatibility score (0-100) if calculated",
              "minimum": 0,
              "maximum": 100
            },
            "distance": {
              "type": "number",
              "description": "Distance in kilometers from viewer"
            },
            "isLiked": {
              "type": "boolean",
              "description": "Whether viewer has liked this profile"
            },
            "isMatched": {
              "type": "boolean",
              "description": "Whether viewer and this user are matched"
            },
            "isBlocked": {
              "type": "boolean",
              "description": "Whether this user is blocked by viewer"
            }
          }
        }
      },
      "errors": [
        {
          "name": "ProfileNotFound"
        },
        {
          "name": "ProfileInactive"
        },
        {
          "name": "Blocked"
        }
      ]
    }
  }
}
