{
  "lexicon": 1,
  "id": "com.fypapp.sendMessage",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Send a message to a matched user",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["recipient", "text"],
          "properties": {
            "recipient": {
              "type": "string",
              "format": "did",
              "description": "DID of the message recipient"
            },
            "text": {
              "type": "string",
              "description": "Message text",
              "maxLength": 1000
            },
            "media": {
              "type": "blob",
              "accept": ["image/png", "image/jpeg", "image/webp", "image/gif"],
              "maxSize": 5000000
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["uri", "cid"],
          "properties": {
            "uri": {
              "type": "string",
              "format": "at-uri"
            },
            "cid": {
              "type": "string",
              "format": "cid"
            }
          }
        }
      },
      "errors": [
        {
          "name": "NotMatched",
          "description": "Users are not matched"
        },
        {
          "name": "MessageTooLong"
        }
      ]
    }
  }
}
