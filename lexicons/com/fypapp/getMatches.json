{
  "lexicon": 1,
  "id": "com.fypapp.getMatches",
  "defs": {
    "main": {
      "type": "query",
      "description": "Get list of current matches for the authenticated user",
      "parameters": {
        "type": "params",
        "properties": {
          "limit": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100,
            "default": 50
          },
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["matches"],
          "properties": {
            "matches": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "#matchView"
              }
            },
            "cursor": {
              "type": "string"
            }
          }
        }
      }
    },
    "matchView": {
      "type": "object",
      "required": ["uri", "cid", "match", "profile"],
      "properties": {
        "uri": {
          "type": "string",
          "format": "at-uri"
        },
        "cid": {
          "type": "string",
          "format": "cid"
        },
        "match": {
          "type": "ref",
          "ref": "com.fypapp.match"
        },
        "profile": {
          "type": "ref",
          "ref": "com.fypapp.profile"
        },
        "unreadCount": {
          "type": "integer",
          "description": "Number of unread messages in this match"
        }
      }
    }
  }
}
