{
  "lexicon": 1,
  "id": "com.fypapp.like",
  "defs": {
    "main": {
      "type": "record",
      "description": "A like action on another user's profile",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "createdAt"],
        "properties": {
          "subject": {
            "type": "string",
            "format": "did",
            "description": "DID of the user being liked"
          },
          "message": {
            "type": "string",
            "description": "Optional message sent with the like",
            "maxLength": 300
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          },
          "superLike": {
            "type": "boolean",
            "description": "Whether this is a super like (premium feature)",
            "default": false
          }
        }
      }
    }
  }
}
